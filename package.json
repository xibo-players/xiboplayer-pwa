    "@xiboplayer/stats": "^0.3.0",
    "@xiboplayer/sw": "^0.3.0",
    "@xiboplayer/sync": "^0.3.7",
    "@xiboplayer/utils": "^0.3.0",
    "@xiboplayer/xmds": "^0.3.0",
    "@xiboplayer/xmr": "^0.3.0",
    "html2canvas": "^1.4.1",
